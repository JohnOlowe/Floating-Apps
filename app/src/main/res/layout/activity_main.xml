<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:id="@+id/firstLine"
		android:orientation="horizontal"
		android:padding="10dp">

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/floating_pdf"
			android:background="@color/buttonColor"
			android:layout_margin="10dp"
			android:layout_weight="1"
			android:padding="10dp">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:src="@drawable/pdf_logo"
				android:id="@+id/floatingLogo"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/floatingLogo"
				android:text="@string/floating_pdf"
				android:layout_centerHorizontal="true"
				android:paddingTop="5dp"
				android:textColor="#FFFFFF"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/floating_calculator"
			android:layout_margin="10dp"
			android:background="#00aaaa"
			android:layout_weight="1"
			android:padding="10dp">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:src="@drawable/simple_calc"
				android:id="@+id/calcLogo"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/calcLogo"
				android:text="@string/floating_calc"
				android:layout_centerHorizontal="true"
				android:paddingTop="5dp"
				android:textColor="#FFFFFF"/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal"
		android:weightSum="2"
		android:layout_below="@+id/firstLine"
		android:padding="10dp">

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/floating_bible"
			android:background="@color/buttonColor"
			android:layout_margin="10dp"
			android:layout_weight="1"
			android:padding="10dp">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:src="@drawable/bible_logo"
				android:id="@+id/bibleLogo"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/bibleLogo"
				android:text="@string/floating_bible"
				android:layout_centerHorizontal="true"
				android:paddingTop="5dp"
				android:textColor="#FFFFFF"/>

		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>

